packages:
  yum:
    git: []
    gcc: []
    make: []
    openssl-devel: []
    ImageMagick: []
commands:
  00-add-home-variable:
    command: sed -i 's/function error_exit/export HOME=\/root\n\nfunction error_exit/' /opt/elasticbeanstalk/hooks/appdeploy/pre/50npm.sh
  01-add-node-home-variable:
    command: sed -i 's/function error_exit/export NODE_HOME=\/opt\/elasticbeanstalk\/node-install\/node-v0.10.10-linux-x64\/bin\n\nfunction error_exit/' /opt/elasticbeanstalk/hooks/appdeploy/pre/50npm.sh
  02-clear-npm:
    command: rm -rf ~/.npm
  03-explain-node:
    command: ln -s /opt/elasticbeanstalk/node-install/node-v0.10.10-linux-x64/bin/node /usr/bin/node
    test: test ! -e /usr/bin/node
  04-explain-npm:
    command: ln -s /opt/elasticbeanstalk/node-install/node-v0.10.10-linux-x64/bin/npm /usr/bin/npm
    test: test ! -e /usr/bin/npm
  05-installSails:
    command: /opt/elasticbeanstalk/node-install/node-v0.10.10-linux-x64/bin/npm install -g sails
    test: /opt/elasticbeanstalk/node-install/node-v0.10.10-linux-x64/bin/npm --version
  06-installGrunt:
    command: /opt/elasticbeanstalk/node-install/node-v0.10.10-linux-x64/bin/npm install -g grunt-cli
    test: /opt/elasticbeanstalk/node-install/node-v0.10.10-linux-x64/bin/npm --version
  07-explain-grunt:
    command: ln -s /opt/elasticbeanstalk/node-install/node-v0.10.10-linux-x64/bin/grunt /usr/bin/grunt
    test: test ! -e /usr/bin/grunt
  09-runGruntAfterPass:
    command: grunt prod
    cwd: /var/app/current/
    test: test -e /var/app/current/package.json
    ignoreErrors: true

